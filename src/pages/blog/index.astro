---
import Showcase from "../../components/Showcase.astro";
import CardV2 from "../../components/CardV2.astro";
import Layout from "../../layouts/Layout.astro";

const posts = await Astro.glob('../../posts/*.md');

// Headless Fetch example
// const response = await fetch('https://jsonplaceholder.typicode.com/posts?_limit=5');
// const posts = await response.json();

// then inside of the CardV2
// <h3>{post.title}</h3>  
// <p>{post.body}</p>  
---

<Layout title="Blog">
  <Showcase heading="Astro Blog" text="A simple blog built with Astro." />
  <section class="page-content">
    <div class="container">
      {posts.map( post => (
        <CardV2>
          <h3>{post.frontmatter.title}</h3>  
          <p>{post.frontmatter.excerpt}</p>
          <a class="btn" href={`${post.frontmatter.slug}`}>Read more</a>  
        </CardV2>
      ))}
    </div>
  </section>
</Layout>